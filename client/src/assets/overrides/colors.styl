.background {
  &.primary {
    background-color: $primary;
    
    &.overlay {
      background-color: rgba($primary, 0.8);
    }
  }
  
  &.secondary {
    background-color: $secondary;
  }
  
  &.clear {
    background-color: #fff;
    
    & * {
      color: lighten(#000, 15%);
    }
  }
}

.text {
  &.primary {
    color: $primary;
  }
  
  &.secondary {
    color: $secondary;
  }
  
  &.meta {
    color: lighten($secondary, 40%);
  }
  
  &.meta-2 {
    color: lighten(#000, 70%);
  }
  
  &.normal {
    color: lighten(#000, 30%);
  }
  
  &.white {
    color: #fff !important;
    
    & > * {
      color: #fff;
    }
  }
}

.dark-mode {
  background-color: $primary;
  
  * {
    color: lighten($primary, 90%);
  }
}

.text {
  &.white {
    .ant-list-empty-text {
      color: lighten($secondary, 70%);
    }
  }
}