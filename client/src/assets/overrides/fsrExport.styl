$documentSize = 9pt;
$headerSize = 11pt;
$tableCell = (8in / 11);

.export-wrapper {
  width: 8.5in;
  background-color: white;
  padding: 0.7in 0.5in;
}


.fsrExport {
  display: inline;
  max-width: 100%;
  font-family: "Arial", sans-serif;

  .document {
    background-color: white;
    font-size: $documentSize;
    line-height: 1.25;

    width: 100%;
    position: relative;
    overflow: visible;
    
    * {
      color: black !important;
    }
    
    .bold { font-weight: bold; }
    .center {
      text-align: center;
      
      & > * { margin: auto; }
    }
    .right { text-align: right; }
    .justify { text-align: justify; }
    header { font-size: $headerSize; }
    label { margin-right: 0.5em; }
    
    table {
      font-size: $documentSize;
      margin-bottom: 10px;
      width: 100%;
    }
    section { margin: 1em 0; }
    tr, td, th {
      border-collapse: collapse;
      border: 1px solid black;
      text-align: center;
    }
    
    tr {
      page-break-inside: avoid !important;
    }
    
    td, th { padding: 5px; }

    th {
      line-height: 1;
    }
    
    table.equal {
      th, td {
        width: $tableCell;
      }
    }

    .mvertical {
      margin: 0.8em 0;
    }

    .section-header {
      margin-top: 0.5em;
    }

    .highlight {
      &.orange { background: #FF9900; }
      &.blue { background: #99CCCC; }
    }
  }
  
  .form-float {
    position: absolute;
    top: 0;
    left: 0;
    font-size: $documentSize;
  }
  
  .grid {
    display: flex;
    width: 100%;
  }
  
  .flex-mid {
    display: flex;
  }
  
  .field-line {
    text-align: center;
    flex: 1;
    
    &:after {
      display: block;
      border-top: 1px solid black;
      padding: 0 1em;
      
      content: attr(data-label);
    }
  }
  
  .margin1 {
    &.left { margin-left: 0.5em; }
    &.right { margin-right: 0.5em; }
  }
  
  .signatory {
    border-top: 1px solid black;
    width: 40%;
    text-align: center;
    position: relative;
    margin-top: 3.5em;
    margin-left: auto;
    margin-right: 1em;
    
    &:before {
      content: attr(data-label);
      display: block;
      position: absolute;
      top: -3.2em;
      left: 0.5em;
    }
  }
  
  .inline-flex {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .blank-field {
    border-bottom: 1px solid black;
    padding: 0 1em;
    display: inline-block;
    text-align: center;
  }
}